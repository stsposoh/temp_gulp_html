/*BASIC STYLES*/
.clearfix
  clearfix()

* 
  box-sizing border-box
  
html
  font-size 100%
  
body
  min-width 320px
  color $base-font-color
  font-size $base-font-size
  line-height 1.6
  font-family: "RobotoRegular", sans-serif
  overflow-x: hidden
  font-smoothing antialiased
  scroll-behavior smooth

  
/*FOOTER TO BOTTOM*/
html, body
  height 100%

.wrapper
  min-height 100%
  main
    padding-bottom 100px

footer
  height 100px
  margin-top -100px
